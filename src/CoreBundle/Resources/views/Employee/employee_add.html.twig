{% extends '@Core/base_dashboard.html.twig' %}

{% block dashboard %}

{% form_theme form 'materialize_form_theme.html.twig' %}
    <div class="container">
        <div class="center row">

            <nav style="background-color: #5c6bc0; text-align: left">
                <div class="nav-wrapper">
                    <div class="col s12">
                        <a class="breadcrumb">TouchRemote</a>
                        <a href="{{ path('employee_list') }}" class="breadcrumb">Empleados</a>
                        <a href="{{ path('employee_add') }}" class="breadcrumb">Nuevo</a>
                    </div>
                </div>
            </nav>

            <div class="section"></div>
            <div class="row">
                <div class="col s5 right-align">
                    <a class="btn-floating waves-effect waves-light btn-large indigo" href="{{ path('employee_list') }}">
                        <i class="material-icons">call_received</i>
                    </a>
                </div>
                <h5 class="indigo-text col s7 left-align">Nuevo empleado</h5>

            </div>
            <div class="section"></div>

            <div class="">
                <div class="z-depth-1 grey lighten-5 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE; width: 100%">

                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="row">
                        <div class="col m6">
                            {{ form_row(form.name) }}
                            {{ form_row(form.lastName) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}
                        </div>

                        <div class="col m6">
                            {{ form_row(form.phone) }}
                            {{ form_row(form.birthdate) }}
                            {{ form_row(form.workstation) }}
                            {{ form_row(form.woman) }}

                        </div>

                    </div>

                </div>
                <div class="right-align" style="margin-bottom: 50px">
                    <button class="btn waves-effect waves-light teal darken-3" type="submit" name="action">Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                {{ form_end(form) }}


            </div>
        </div>

    </div>

    <script>
        $(document).ready(function () {
            $('.datepicker').pickadate({
                format: 'yyyy-mm-dd',
                showOn: 'button',
                selectMonths: true,
                selectYears: 15,
                labelMonthNext: 'Mes siguiente',
                labelMonthPrev: 'Mes anterior',
                labelMonthSelect: 'Selecciona un mes',
                labelYearSelect: 'Selecciona un año',
                monthsFull: [ 'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre' ],
                monthsShort: [ 'Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic' ],
                weekdaysFull: [ 'Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado' ],
                weekdaysShort: [ 'Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab' ],
                weekdaysLetter: [ 'D', 'L', 'M', 'X', 'J', 'V', 'S' ],
                today: 'Hoy',
                clear: 'Limpiar',
                close: 'Cerrar',
                onSet: function () {
                    console.log($('.datepicker').val())
                }
            });

            {% if message is defined %}
            $(document).ready(function () {
                Materialize.toast(' {{ message }} ', 4000);
            });
            {% endif %}

        });

    </script>
{% endblock %}

