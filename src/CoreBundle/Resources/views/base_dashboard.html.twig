    <main>
        <div class="container">
            <div class="center">
                {% block dashboard %}

                {% endblock %}
            </div>
        </div>
    </main>

    <footer class="page-footer">
        <footer class="footer-copyright">
            <div class="container">
                CC 2017 Rafael Vargas del Moral
                <a class="grey-text text-lighten-4 right" href="https://github.com/rvargasdelmoral/SignerRemote-backend" target="_blank">Github</a>
            </div>
        </footer>
    </footer>

    <script>
        $(document).ready(function () {
            $(".dropdown-button").dropdown();

            $(".button-collapse").sideNav();
        });
    </script>

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }
        main {
            flex: 1 0 auto;
        }

        .page-footer{
            background-color: #00695c;

        }

        ul.dropdown-content.select-dropdown li span {
            color: #3f51b5
        }

        .input-field input:focus + label {
            color: #3f51b5;
        }
        .input-field input[type]:focus {
            border-bottom: 1px solid #3f51b5;
            box-shadow: 0 1px 0 0 #3f51b5;
        }

        /* label focus color */
        .input-field input[type]:focus + label {
            color: #3f51b5;
        }
    </style>

{% endblock %}


