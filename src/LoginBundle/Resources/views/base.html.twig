{% extends 'base.html.twig' %}

{% block content %}
    {% if err %}
        <script>
            $(document).ready(function () {
                Materialize.toast(' {{ msg_err }} ', 4000);
            });
        </script>
    {% endif %}
    <main style="margin-top: 15px">
        <center>
            <img class="responsive-img" style="width: 125px;" src="{{ asset('assets/img/Logotipo.png') }}" />

            <h5 class="indigo-text">Por favor, inicie sesión</h5>
            <div class="section"></div>

            <div class="container">
                <div class="z-depth-1 grey lighten-5 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                    <form class="col s12" action="{{ path('login_check') }}" method="post">
                        <div class='row'>
                            <div class='col s12'>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <i class="material-icons prefix">email</i>
                                {% if email is defined %}
                                    <input class='validate' type='email' name='email' id='email' value="{{ email }}" />
                                {% else %}
                                    <input class='validate' type='email' name='email' id='email' value="{{ last_username }}" />
                                {% endif %}
                                <label for='email'>Correo electrónico</label>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <i class="material-icons prefix">vpn_key</i>
                                <input class='validate' type='password' name='_password' id='password'/>
                                <label for='password'>Contraseña</label>
                            </div>
                            <label style='float: right;'>
                                <a class='red-text darken-4' href='#!'><b>¿Olvidó su contraseña?</b></a>
                            </label>
                        </div>

                        <br />
                        <center>
                            <div class='row'>
                                <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Entrar</button>
                            </div>
                        </center>
                    </form>

                </div>
            </div>
            <div style="margin-bottom: 89px">
                <a class="blue-text darken-4"  href="{{ path('new_user') }}">Registrarse</a>
            </div>
        </center>
    </main>

{% endblock %}

